{
    "version": "0.2.0",
    "configurations": [


        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.api.main:app",
                "--reload"
            ],
            "jinja": true
        },
        {
            "name": "Python Debugger: Run Pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/test_user_repository.py::test_update_user_not_found"  // Update this with the specific test
            ],
            "justMyCode": false
        }
    ]
}